<h1>Listing requests</h1>

<table>
  <tr>
    <th>Subject</th>
    <th>Content</th>
    <th>Read</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @requests.each do |request| %>
  <tr>
    <td><%= link_to request.subject, request %></td>
    <td><%= request.content %></td>
    <td><%= request.read %></td>
    <td><%= link_to 'Read', request_read_path(request) %></td>
    <td><%= link_to 'Edit', edit_request_path(request) %></td>
    <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

