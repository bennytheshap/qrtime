<%= simple_form_for(@course) do |f| %>
  <%= f.error_notification %>



  <div class="form-inputs">
    <%= f.input :name %>
    <%=  f.input :instructor, :as => :select, :collection => User.with_role(:instructor), :label_method => :name, :value_method => :id %>
  </div>


  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>
