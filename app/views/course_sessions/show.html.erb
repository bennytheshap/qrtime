<p id="notice"><%= notice %></p>

<p>
  <b>Course:</b>
  <%= @course_session.course.name %>
</p>

<p>
  <b>Date:</b>
  <%= @course_session.date %>
</p>

<p>
  <b>Description:</b>
  <%= @course_session.description %>
</p>

<p>
  <b>Start time:</b>
  <%= @course_session.start_time.strftime("%I:%M:%S") %>
</p>

<p>
  <b>End time:</b>
  <%= @course_session.end_time.strftime("%I:%M:%S") %>
</p>

<p>
  <b>Check In URL:</b>
  <%= @course_session.check_in_url %>
</p>

<p>
  <b>Check Out URL:</b>
  <%= @course_session.check_out_url %>
</p>

<table cellpadding=40>
  <tr><th>Check in QR:</th><th>Check Out QR:</th></tr>
  <tr>
      <td><%= link_to (image_tag(course_session_check_in_url(@course_session, :format => :png))),
                      course_session_check_in_url(@course_session)%></td>
    <td><%= link_to (image_tag(course_session_check_out_url(@course_session, :format => :png))),
                    course_session_check_out_url(@course_session)%></td>
  </tr>
</table>

<%= link_to 'Edit', edit_course_session_path(@course_session) %>
<%= link_to 'Destroy', @course_session, method: :delete, data: { confirm: 'Are you sure?' } %>|
<%= link_to 'Back', course_path(@course_session.course) %>
