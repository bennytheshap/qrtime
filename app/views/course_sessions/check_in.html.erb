Course: <%= @course_session.course.name %> <br><br>

Course Session: <%= @course_session.id %>    <br><br>

Date: <%= @course_session.date %>    <br><br>

Start Time: <%= @course_session.start_time %>    <br><br>

<% if current_user.has_role?(:student) == true %>
<% if current_user.enrolled_in?(@course_session.course)  %>
    <%= form_for @student_activity, :url => {:controller => :student_activities, :action => "check_in"} do |f|  %>
        <%=  f.hidden_field :course_session_id %>
        <%= f.submit "Check In" %>
    <% end %>
    <% else %><br><br>
    You are not enrolled in <%= @course_session.course.name %>. Please ask an admin to enroll you in this course.
    <% end %>

<% elsif current_user.has_role?(:instructor) == true %> <br><br>
    You are an instructor. You cannot check in.
       <br><br>
    <%= link_to 'Home', root_path %>

<% elsif current_user.has_role?(:admin) == true %>   <br><br>
     You are an admin. You cannot check in.
       <br><br>
    <%= link_to 'Home', root_path %>
<% end %>

